{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "lib": ["ESNext", "DOM"],
    "allowJs": false,
		"sourceMap": true,
    "outDir": "./dist",
    "rootDir": ".",
    "removeComments": true,
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "baseUrl": "src",
    "paths": {
			"@models/*": ["core/models/*", "common/models/*"],
			"@services/*": ["core/services/*"],
			"@types/*": ["types/*"],
			"@modules/*": ["modules/*"],
			"@repos/*": ["core/repos/*"],
			"@config": ["config"]
    },
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
		"strictPropertyInitialization": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./src/typings", "./node_modules/@types"],
    "resolveJsonModule": true
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src"]
}
